* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  line-height: 1.6;
  color: #333;
  overflow-x: hidden;
}

.app {
  min-height: 100vh;
  background: 
    radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(75, 0, 130, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(255, 0, 150, 0.2) 0%, transparent 50%),
    linear-gradient(135deg, #0a0a23 0%, #1a1a3a 25%, #2a1a4a 50%, #3a2a5a 75%, #0a0a23 100%);
  background-size: 400% 400%;
  animation: galaxyShift 20s ease infinite;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow-x: hidden;
  padding: 2rem;
  align-items: center;
  justify-content: center;
}

@keyframes galaxyShift {
  0%, 100% {
    background-position: 0% 0%, 0% 100%, 0% 0%, 0% 50%;
  }
  25% {
    background-position: 25% 25%, 75% 75%, 25% 25%, 100% 0%;
  }
  50% {
    background-position: 50% 50%, 50% 50%, 50% 50%, 50% 100%;
  }
  75% {
    background-position: 75% 25%, 25% 75%, 75% 75%, 0% 50%;
  }
}

.app::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(1px 1px at 20px 30px, rgba(255,255,255,0.9), transparent),
    radial-gradient(1px 1px at 40px 70px, rgba(255,255,255,0.8), transparent),
    radial-gradient(1px 1px at 90px 40px, rgba(255,255,255,0.7), transparent),
    radial-gradient(1px 1px at 130px 80px, rgba(255,255,255,0.9), transparent),
    radial-gradient(1px 1px at 160px 30px, rgba(255,255,255,0.6), transparent),
    radial-gradient(1px 1px at 200px 120px, rgba(255,255,255,0.8), transparent),
    radial-gradient(1px 1px at 50px 150px, rgba(255,255,255,0.7), transparent),
    radial-gradient(1px 1px at 180px 50px, rgba(255,255,255,0.9), transparent);
  background-repeat: repeat;
  background-size: 300px 200px;
  animation: twinkleStars 15s linear infinite;
  pointer-events: none;
  opacity: 0.9;
  z-index: 1;
}

@keyframes twinkleStars {
  0% { 
    transform: translateY(0px) translateX(0px);
    opacity: 0.9;
  }
  50% {
    opacity: 0.6;
  }
  100% { 
    transform: translateY(-200px) translateX(-100px);
    opacity: 0.9;
  }
}

.app::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    linear-gradient(90deg, transparent, rgba(255,255,255,0.8), transparent) 0% 20%/2px 100px,
    linear-gradient(120deg, transparent, rgba(255,255,255,0.6), transparent) 30% 60%/1px 80px,
    linear-gradient(45deg, transparent, rgba(255,255,255,0.7), transparent) 70% 10%/2px 120px;
  background-repeat: no-repeat;
  animation: shootingStars 8s linear infinite;
  pointer-events: none;
  opacity: 0.8;
  z-index: 2;
}

@keyframes shootingStars {
  0% {
    transform: translateX(-100vw) translateY(50px);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateX(100vw) translateY(-50px);
    opacity: 0;
  }
}

.top-bar {
  position: absolute;
  top: 2rem;
  left: 2rem;
  right: 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
}

.top-controls {
  display: flex;
  gap: 1rem;
}

.control-btn {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(10, 10, 35, 0.8);
  border: 2px solid rgba(120, 119, 198, 0.4);
  border-radius: 50%;
  font-size: 1.2rem;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.control-btn:hover {
  background: rgba(120, 119, 198, 0.3);
  border-color: rgba(120, 119, 198, 0.7);
  transform: scale(1.1);
  box-shadow: 0 0 25px rgba(120, 119, 198, 0.5);
}

.star-decoration {
  font-size: 2rem;
  animation: starFloat 3s ease-in-out infinite;
  filter: drop-shadow(0 0 20px rgba(255, 235, 59, 0.8));
}

@keyframes starFloat {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-10px) rotate(180deg); }
}

.main-window {
  width: 100%;
  max-width: 1000px;
  background: rgba(10, 10, 35, 0.85);
  border: 2px solid rgba(120, 119, 198, 0.4);
  border-radius: 20px;
  backdrop-filter: blur(25px);
  box-shadow: 
    0 25px 80px rgba(0, 0, 0, 0.6),
    0 0 60px rgba(120, 119, 198, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
  overflow: hidden;
  position: relative;
  z-index: 10;
}

.window-header {
  background: rgba(0, 0, 0, 0.4);
  padding: 1rem 2rem;
  border-bottom: 2px solid rgba(120, 119, 198, 0.3);
  display: flex;
  align-items: center;
}

.window-title {
  color: rgba(255, 255, 255, 0.9);
  font-size: 1.1rem;
  font-weight: 500;
  text-shadow: 0 0 15px rgba(120, 119, 198, 0.5);
}

.window-content {
  padding: 2rem;
  min-height: 500px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.footer {
  background: rgba(10, 10, 35, 0.9);
  backdrop-filter: blur(25px);
  border-top: 2px solid rgba(120, 119, 198, 0.4);
  padding: 2rem;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
  box-shadow: 0 -8px 32px rgba(120, 119, 198, 0.2);
}

.social-links {
  display: flex;
  justify-content: center;
  gap: 1.5rem;
  margin-bottom: 1rem;
}

.social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  background: rgba(255, 215, 0, 0.2);
  border-radius: 50%;
  color: rgba(255, 255, 255, 0.9);
  text-decoration: none;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  border: 2px solid rgba(255, 215, 0, 0.3);
  position: relative;
}

.social-link::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, #ffd700, #ff9800, #9c27b0);
  background-size: 200% 200%;
  border-radius: 50%;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
  animation: socialGlow 3s ease-in-out infinite;
}

.social-link:hover::before {
  opacity: 1;
}

.social-link:hover {
  background: rgba(255, 215, 0, 0.4);
  color: #ffd700;
  transform: translateY(-3px) scale(1.1);
  box-shadow: 
    0 15px 35px rgba(255, 215, 0, 0.3),
    0 5px 15px rgba(255, 215, 0, 0.2);
  border-color: rgba(255, 215, 0, 0.6);
}

@keyframes socialGlow {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

.copyright {
  color: rgba(255, 255, 255, 0.8);
  font-size: 0.9rem;
  margin: 0;
  text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
}

@media (max-width: 768px) {
  .app {
    padding: 1rem;
  }
  
  .top-bar {
    top: 1rem;
    left: 1rem;
    right: 1rem;
  }
  
  .main-window {
    margin-top: 4rem;
    margin-bottom: 8rem;
  }
  
  .window-content {
    padding: 1.5rem;
    min-height: 400px;
  }
  
  .footer {
    padding: 1.5rem;
  }
  
  .social-links {
    gap: 1rem;
  }
  
  .social-link {
    width: 40px;
    height: 40px;
  }
}

